<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.CadastrarArena">


    <LinearLayout
        android:id="@+id/text_key"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgraund"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal|fill_horizontal|center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="5"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/text_cadArena_nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint="Nome do projeto"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/text_cadArena_igrejaMae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint="Igreja MÃ£e"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/text_cadArena_Endereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint="Endereco"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_Hr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="@drawable/border"
                        android:foregroundGravity="center"
                        android:gravity="center" />

                    <Spinner
                        android:id="@+id/spinner_Min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="@drawable/border"
                        android:foregroundGravity="center"
                        android:gravity="center" />

                    <Spinner
                        android:id="@+id/spinner_Semana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@drawable/border"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </LinearLayout>

                <EditText
                    android:id="@+id/text_cadArena_Codigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint="Codigo"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_cadArena"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/border_button"
                    android:padding="10dp"
                    android:text="Cadastrar"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>