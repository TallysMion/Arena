<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.CadastrarUser">

    <LinearLayout
        android:id="@+id/text_key"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgraund"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal|fill_horizontal|center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="10"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_weight="1"
                    android:foregroundGravity="bottom|center_horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/text_cadNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Nome"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_cadLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Login"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_cadKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_cadKey2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Confirme sua Senha"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="1"
                    android:foregroundGravity="top|center_horizontal"
                    android:gravity="top|center_horizontal"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/text_cadEmail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_cadNasc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Data de Nascimento"
                        android:inputType="date"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_cadTelefone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Telefone"
                        android:inputType="date"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/text_cadCodigo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:hint="Codigo de Cadastro"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textStyle="bold" />



                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/button_cadButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/border_button"
                android:padding="10dp"
                android:text="Cadastrar"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Solicite o codigo ao seu lider!"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>